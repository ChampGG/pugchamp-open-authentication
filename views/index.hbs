<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <link href="/components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    </head>
    <body>
        <div class="container">
            <form class="form-inline" method="GET">
                <div class="form-group">
                    <label for="user">User Steam ID</label>
                    <input type="text" class="form-control" id="user" name="user" placeholder="76561198043850090">
                </div>
                <button type="submit" class="btn btn-default">Perform Checks</button>
            </form>

            {{#if player}}
            <div class="page-header">
                <h1>
                    <a href="{{player.profileurl}}">{{player.personaname}}</a>
                </h1>
            </div>

            {{#if authorized}}
            <div class="alert alert-success" role="alert"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Access Granted</div>
            {{else}}
            <div class="alert alert-danger" role="alert"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Access Denied</div>
            {{/if}}

            {{#each flags}}
            {{flag this}}
            {{/each}}
            {{/if}}
        </div>
    </body>
</html>
